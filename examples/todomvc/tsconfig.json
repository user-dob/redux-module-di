{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "jsx": "react",
      "allowJs": true,
      "types": ["mocha", "reflect-metadata"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": [
      "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "babelOptions": {
        "babelrc": false,
        "presets": [
          ["env", {
            "targets": {}
          }]
        ],
        "plugins": ["transform-runtime"]
      }
    }
  }